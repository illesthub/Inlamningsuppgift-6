
<header>
    <div class="container">
        <a asp-controller="home" asp-action="index"><img class="logo" src="images/logo.svg" alt=""></a>

        <div class="menu">
            <nav class="menu-links">
                <a class="link" asp-controller="home" asp-action="index">HOME</a>
                <a class="link" asp-controller="product" asp-action="index">PRODUCTS</a>
                <a class="link" asp-controller="contact" asp-action="index">CONTACT</a>
            </nav>
            <nav class="menu-icons">
                @if (User.IsInRole("Admin"))
                {
                    <a class="link" asp-controller="admin" asp-action="index">Admin</a>
                    <a class="link" asp-controller="product" asp-action="search"><i class="fa-regular fa-search"></i></a>
                    <a class="link" asp-controller="login" asp-action="index">Login</a>
                    <a class="link" asp-controller="shopping" asp-action="cart"><i class="fa-solid fa-cart-shopping"></i></a>
                }

                else if (User.IsInRole("User"))
                {
                    <a class="link">Logged in</a>
                    <a class="link" asp-controller="product" asp-action="search"><i class="fa-regular fa-search"></i></a>
                    <a class="link" asp-controller="login" asp-action="index">Login</a>
                    <a class="link" asp-controller="shopping" asp-action="cart"><i class="fa-solid fa-cart-shopping"></i></a>
                }
                else {
                    <a class="link" asp-controller="product" asp-action="search"><i class="fa-regular fa-search"></i></a>
                    <a class="link" asp-controller="login" asp-action="index">Login</a>
                    <a class="link" asp-controller="shopping" asp-action="cart"><i class="fa-solid fa-cart-shopping"></i></a>
                }
            </nav>
        </div>
        <div class="toggle">
            <button class="btn-white" data-option="toggle" data-target="#menu">
                <i class="fa-regular fa-bars"></i>
            </button>
        </div>
    </div>
</header>