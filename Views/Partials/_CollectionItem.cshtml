@model ProductEntity;

<a asp-controller="product" asp-action="productdetails" asp-route-productId="@Model.Id" class="collection-item">
    <img src="@Model.LinkUrl" alt="">
    <div class="body">
        <div class="title">@Model.Title</div>
        <div class="info">
            <div class="price">@Model.Price</div>
            <i class="add-cart fa-regular fa-cart-plus"></i>
        </div>       
    </div>
</a>