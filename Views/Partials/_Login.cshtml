<div class="login">
    <div class="container">
        <div class="loginbody">
            <form class="loginform">
                <h2 class="title">Please Login to Your Account</h2>
                <div class="line">
                    <hr>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="firstname">First Name:  <a class="link" asp-controller="account" asp-action="register"><i>Don't have an account?</i></a></label>
                        <input type="text" id="firstname" name="firstname" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password <i>Forgot your password?</i></label>
                        <input type="password" id="password" name="password" required>
                    </div>

                    <div class="infobox">
                        <input type="checkbox" style="height: 16px;" id="save-info" name="save-info">
                        <label for="save-info">Please keep me logged in</label>

                    </div>

                    <button type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>